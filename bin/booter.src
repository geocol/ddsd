#!/bin/bash
set -eo pipefail

{{INSTALL}}

perl local/bin/pmbp.pl --install-commands "make git wget"

mkdir -p local/ddsd
(git clone -b @@BRANCH@@ --depth 1 https://github.com/geocol/ddsd local/ddsd/app) || \
(cd local/ddsd/app && git pull && (git checkout -b @@BRANCH@@ || git checkout -b @@BRANCH@@))

cd local/ddsd/app && make deps

cp local/ddsd/app/ddsd ./

echo ddsd is ready.
echo Run:
echo   \$ ./ddsd

